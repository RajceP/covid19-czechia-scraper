{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "pwa-node",
      "request": "launch",
      "args": ["${workspaceRoot}/src/app.ts"],
      "runtimeArgs": ["-r", "ts-node/register", "--exec", "node"],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "nodemon",
      "restart": true,
      "env": {
        "TS_NODE_IGNORE": "false"
      },
      "console": "internalConsole",
      "outputCapture": "std"
    },
    {
      "name": "test",
      "type": "pwa-node",
      "request": "launch",
      "args": ["${workspaceRoot}/src/test/test.ts"],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "ts-node",
      "env": {
        "TS_NODE_IGNORE": "false"
      },
      "console": "internalConsole",
      "outputCapture": "std"
    }
  ]
}
